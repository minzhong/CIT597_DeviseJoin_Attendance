<%- model_class = Attendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div>
	<h3>View overall attendances: </h3>
		<p><font color="red">Select a course: </font> </p>
		  <%= form_tag calculate_attendances_path, multipart: true do %>
		  <%= collection_select :attendance, :course_id, Course.where("user_id = ?", current_user.id),
		  		 :id, :code_term_year, prompt: true %>
		    <%= submit_tag "View" %>
		  <% end %>
</div>

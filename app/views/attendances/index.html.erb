<%- model_class = Attendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div>
	<h3>Upload attendance sheet:</h3>
	<p>Select a course: </p>
		  <%= form_tag import_attendances_path, multipart: true do %>
		  <%= collection_select :attendance, :course_id, Course.where("user_id = ?", current_user.id),
		  		 :id, :course_code, prompt: true %>
		    <%= file_field_tag :file %>
		    <%= submit_tag "Upload" %>
		  <% end %>
		  
	<h3>View overall attendances: </h3>
		<p>Select a course: </p>
		  <%= form_tag calculate_attendances_path, multipart: true do %>
		  <%= collection_select :attendance, :course_id, Course.where("user_id = ?", current_user.id),
		  		 :id, :course_code, prompt: true %>
		    <%= submit_tag "View" %>
		  <% end %>
</div>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:att_date) %></th>
      <th><%= model_class.human_attribute_name(:att_time) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th>Last Name</th>
	  <th>First Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= link_to attendance.id, attendance_path(attendance) %></td>
        <td><%= attendance.att_date %></td>
        <td><%= attendance.att_time %></td>
        <td><%= attendance.note %></td>
        <td><%= attendance.course_id %></td>
        <td><%= Student.find_by_id(attendance.student_id).last_name %></td>
		<td><%= Student.find_by_id(attendance.student_id).first_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_attendance_path(attendance), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      attendance_path(attendance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_attendance_path,
            :class => 'btn btn-primary' %>

<h2><br>Attendances for the course: <%= @course_name %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Link to display</th>
	  <th>Last Name</th>
	  <th>First Name</th>
      <th>Attendances to date</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to 'view record' , graphing2_course_student_path(student, :course_id=>@course_id, :id=>student.id) %></td>
        <td><%= student.last_name %></td>
		<td><%= student.first_name %></td>
		<td><%= Attendance.calculate_attendances(student.id, @course_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.back', :default => t("helpers.links.back")),
              attendances_path, :class => 'btn btn-default' %>
